	gtags = !~/.githooks/gtags
[log]
	date = local
	showSignature = true
[difftool "vimdiff"]
	cmd = vim -R -f -d \"$REMOTE\" \"$LOCAL\"
[mergetool "diffconflicts"]
	cmd = diffconflicts.sh vim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
