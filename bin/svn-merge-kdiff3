#!/usr/bin/env python
import sys
import os

# Configure your favorite merge program here.
MERGE = "/usr/bin/kdiff3"

# Get the paths provided by Subversion.
BASE   = sys.argv[1]
THEIRS = sys.argv[2]
MINE   = sys.argv[3]
MERGED = sys.argv[4]
WCPATH = sys.argv[5]

# Call the merge command (change the following line to make sense for
# your merge program).
cmd = [BASE, MINE, THEIRS, '-o', MERGED, '-L1', 'base', '-L2', 'mine', '-L3', 'theirs']
os.execv(MERGE, cmd)

# Return an errorcode of 0 if the conflict was resolved; 1 otherwise.
# Any other errorcode will be treated as fatal.
